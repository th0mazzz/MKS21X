public class ReverseCharSequence{

    private String storage;
    private String original;
    
    public ReverseCharSequence(String inputString){
	storage = "";
	original = inputString;
	for(int index = inputString.length() - 1; index >= 0; index++){
	    storage = storage + inputString.charAt(index);
	}
    }

    public int length(){
	return storage.length();
    }

    public static void main(String[] args){
	// Testing constructor
	ReverseCharSequence testConstr = new ReverseCharSequence("gnirts a si sihT");
	System.out.println(testConstr.storage);
	
    }
}
